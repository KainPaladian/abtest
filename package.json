{
    "name": "abtest",
    "version": "1.0.0",
    "description": "AB Test API is a system to help developer teams to perform tests to verify if new features will be better than older features.",
    "main": "main.js",
    "scripts": {
        "test": "cross-env NODE_ENV=development NODE_PORT=3000 mocha",
        "test-staging": "cross-env NODE_ENV=staging NODE_PORT=3000 mocha",
        "start-dev": "cross-env NODE_ENV=development NODE_PORT=3000 nodemon main.js",
        "start-staging": "cross-env NODE_ENV=staging NODE_PORT=3000 forever start ./config/forever/staging.json",
        "start": "cross-env NODE_ENV=production NODE_PORT=3000 forever start ./config/forever/production.json"
    },
    "keywords": [
        "AB",
        "Test"
    ],
    "author": "gustavofelipesanto@gmail.com",
    "license": "ISC",
    "dependencies": {
        "async": "^2.4.1",
        "body-parser": "^1.17.2",
        "change-case": "^3.0.1",
        "cross-env": "^5.0.1",
        "express": "4.15.3",
        "forever": "^0.15.3",
        "l": "^0.5.1",
        "mongodb": "^2.2.28",
        "mongoose": "4.10.2",
        "morgan": "^1.8.2",
        "nconf": "^0.8.4",
        "random-id": "0.0.2",
        "require-dir": "^0.3.2",
        "shortid": "^2.2.8",
        "winston": "^2.3.1"
    },
    "devDependencies": {
        "chai": "*",
        "chai-arrays": "^1.0.0",
        "chai-http": "*",
        "mocha": "*",
        "nodemon": "^1.11.0"
    }
}